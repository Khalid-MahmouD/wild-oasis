{
  "extends": ["react-app", "plugin:prettier/recommended"],
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "env": {
        "development": true
      },
      "rules": {
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "prettier/prettier": [
          "warn",
          {
            "semi": false,
            "trailingComma": "es5",
            "printWidth": 120,
            "tabWidth": 2,
            "bracketSpacing": true,
            "arrowParens": "avoid",
            "endOfLine": "auto"
          },
          {
            "usePrettierrc": false
          },
          {
            "semi": false,
            "trailingComma": "es5",
            "printWidth": 120,
            "tabWidth": 2,
            "bracketSpacing": true,
            "arrowParens": "avoid",
            "endOfLine": "auto"
          }
        ]
      }
    }
  ]
}
